<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/style_all.css">

    <style>
        body {
            background-color: #D5EFF8;
        }

        .container {
            background-color: #D5EFF8;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light"
        style="background-color: #D7B0FE; border-bottom: 1px solid #535353;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">News Portal</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <button onclick="window.location.href='/profile'" class="btn btn-primary me-2">Profile</button>
                    </li>
                    <li class="nav-item">
                        <button onclick="window.location.href='/logout'" class="btn btn-danger">Logout</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container pt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h3 class="text-center mb-4">News List</h3>
                <div class="row">
                    <% news.forEach(n=> { %>
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="<%= n.image %>" class="card-img-top" style="height:320px;"
                                    alt="<%= n.title %>">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= n.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= n.abstract %>
                                    </p>
                                    <button onclick="window.location.href='/news/<%= n.id %>'"
                                        style="background-color: #F4E5C4;" class="btn">Details</button>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <div class="mt-3">
                    <h5>Current Time:</h5>
                    <p id="currentTime">Loading...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        const ws = new WebSocket('ws://localhost:3001');

        ws.onmessage = (event) => {
            const message = JSON.parse(event.data);
            if (message.event === 'CURRENT_TIME') {
                document.getElementById('currentTime').textContent = message.data;
            }
        };

        ws.onclose = () => {
            console.log('WebSocket connection closed');
        };

        ws.onerror = (error) => {
            console.error(`WebSocket error: ${error.message}`);
        };
    </script>
</body>

</html>